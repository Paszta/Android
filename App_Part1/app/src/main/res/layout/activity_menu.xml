<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/menu_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Menu"
    android:background="@drawable/heniutek"
    >

    <TextView
        android:id="@+id/textView2"
        android:layout_width="283dp"
        android:layout_height="95dp"
        android:layout_marginStart="64dp"
        android:layout_marginTop="56dp"
        android:autoText="true"
        android:text="Menu of the application"
        android:textAlignment="center"
        android:textAllCaps="true"
        android:textIsSelectable="false"
        android:textSize="36sp"
        android:textStyle="bold|italic"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/firstapp_btn"
        android:layout_width="197dp"
        android:layout_height="72dp"
        android:layout_marginStart="108dp"
        android:layout_marginTop="20dp"
        android:alpha="0.7"
        android:backgroundTint="#D37272"
        android:text="Average grade"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />

    <Button
        android:id="@+id/secapp_btn"
        android:layout_width="197dp"
        android:layout_height="72dp"
        android:layout_marginStart="108dp"
        android:layout_marginTop="20dp"
        android:alpha="0.7"
        android:backgroundTint="#D37272"
        android:text="Movie Database"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/firstapp_btn" />

    <Button
        android:id="@+id/drawapp_btn"
        android:layout_width="199dp"
        android:layout_height="73dp"
        android:layout_marginStart="108dp"
        android:layout_marginTop="20dp"
        android:alpha="0.7"
        android:backgroundTint="#D37272"
        android:text="Drawing app"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/secapp_btn" />

</androidx.constraintlayout.widget.ConstraintLayout>